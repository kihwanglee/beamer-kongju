\definecolor{kongjublack}{RGB}{0,0,0}
\definecolor{kongjuwhite}{RGB}{255,255,255}
\definecolor{kongjulightgrey}{RGB}{200,200,200}
\definecolor{kongjulightergrey}{RGB}{230,230,230}
\definecolor{kongjudarkgrey}{RGB}{72,72,72}
\definecolor{kongjublue}{RGB}{7,61,111}
\definecolor{kongjulyellow}{RGB}{202,108,24}


%\setbeamerfont{<bleh>}{family=, size=, shape=, series=}

\setbeamercolor{frametitle}{bg=kongjulightergrey,fg=kongjublue}

\setbeamercolor{titlepage}{bg=kongjulightgrey}
\setbeamercolor{titlepage main}{bg=kongjuwhite,fg=kongjudarkgrey}

\setbeamercolor{headerline title}{fg=kongjuwhite,bg=kongjublack}
\setbeamercolor{headerline border}{bg=kongjublue}

\setbeamercolor{footerline topborder}{bg=kongjublue}
\setbeamercolor{footerline}{bg=kongjudarkgrey,fg=kongjuwhite}

\setbeamercolor{section in head/foot}{fg=kongjuwhite}
\setbeamertemplate{section in head/foot shaded}[default][50]
\setbeamerfont{section in head/foot}{size=\tiny, shape=\bfseries}

\setbeamercolor{alerted text}{fg=kongjulyellow}
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{structure}{bg=kongjuwhite, fg=kongjulyellow}

% blocks
\setbeamercolor{block title}          {bg=kongjulightergrey,fg=kongjudarkgrey}
\setbeamercolor{block body}           {fg=kongjublack}
\setbeamercolor{block title example}  {bg=kongjulightgrey,fg=kongjublue}
\setbeamercolor{block body example}   {bg=kongjulightergrey,fg=kongjudarkgrey}
\setbeamercolor{block title alerted}  {bg=kongjulyellow, fg=kongjublack}
\setbeamercolor{block body alerted}   {bg=kongjulightergrey,fg=kongjudarkgrey}
